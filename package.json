{
  "name": "imagegenai-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for ImageGenAI with FastAPI backend and Next.js frontend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,py}\"",
    "backend:dev": "turbo run dev --filter=backend",
    "frontend:dev": "turbo run dev --filter=frontend",
    "backend:build": "turbo run build --filter=backend",
    "frontend:build": "turbo run build --filter=frontend"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.16",
    "turbo": "^1.10.16",
    "prettier": "^3.0.3"
  },
  "packageManager": "npm@9.8.1",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
